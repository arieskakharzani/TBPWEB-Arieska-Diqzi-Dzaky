  <!-- bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

  <script>
    const drop = document.querySelector('.file-drop');
    const input = drop.querySelector('input[type="file"]');
    
    input.addEventListener('change', () => {
      const files = input.files;
      displayFiles(files);
    });
    function displayFiles(files) {
      const fileLabel = drop.querySelector('.file-label');
      if (files.length > 0) {
        fileLabel.textContent = files[0].name;
      } else {
        fileLabel.textContent = 'Click to upload';
      }
    }
    </script>
    <!-- drag and drop -->
<script>
  function allowDrop(event) {
    event.preventDefault();
  }

  function dragSignature(event) {
    event.dataTransfer.setData("text/plain", event.target.id);
  }

  function dropSignature(event) {
    event.preventDefault();
    const signatureId = event.dataTransfer.getData("text/plain");
    const signatureElement = document.getElementById(signatureId);
    const signatureContainer = event.target;
    signatureContainer.appendChild(signatureElement);
  }
</script>





</body>

